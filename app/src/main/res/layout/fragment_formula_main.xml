<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FormulaMainFragment"
    tools:ignore="HardcodedText,UnusedAttribute">

    <Button
        android:id="@+id/fcr_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_button_formula"
        android:foreground="?attr/selectableItemBackground"
        android:text="อัตราแลกเนื้อ (FCR)"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintBottom_toTopOf="@+id/size_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/size_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_button_formula"
        android:foreground="?attr/selectableItemBackground"
        android:text="ขนาดกุ้ง (SIZE)"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintBottom_toTopOf="@+id/adg_button"
        app:layout_constraintEnd_toEndOf="@+id/fcr_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/fcr_button"
        app:layout_constraintTop_toBottomOf="@+id/fcr_button"/>

    <Button
        android:id="@+id/adg_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_button_formula"
        android:foreground="?attr/selectableItemBackground"
        android:text="อัตราการเจริญเติบโต (ADG)"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintBottom_toTopOf="@+id/survival_rate_button"
        app:layout_constraintEnd_toEndOf="@+id/size_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/size_button"
        app:layout_constraintTop_toBottomOf="@+id/size_button"/>

    <Button
        android:id="@+id/survival_rate_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_button_formula"
        android:foreground="?attr/selectableItemBackground"
        android:text="อัตรารอด (SURVIVAL RATE)"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/adg_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/adg_button"
        app:layout_constraintTop_toBottomOf="@+id/adg_button"/>

</android.support.constraint.ConstraintLayout>