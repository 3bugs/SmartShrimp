<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HatcheryFragment"
    tools:ignore="UnusedAttribute,HardcodedText,LabelFor,Autofill">

    <ScrollView
        android:id="@+id/farm_info_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4"/>

            <TextView
                android:id="@+id/hatchery_name_text_view"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:labelFor="@id/farm_name_edit_text"
                android:text="ชื่อโรงเพาะฟัก"
                app:layout_constraintBottom_toBottomOf="@+id/hatchery_name_edit_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hatchery_name_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/address_text_view"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:labelFor="@id/farm_name_edit_text"
                android:text="ที่อยู่"
                app:layout_constraintBottom_toBottomOf="@+id/address_edit_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/address_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_district_text_view"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/address_edit_text"
                android:text="แขวง/ตำบล"
                app:layout_constraintBottom_toBottomOf="@+id/sub_district_edit_text"
                app:layout_constraintStart_toStartOf="@+id/address_text_view"
                app:layout_constraintTop_toTopOf="@+id/sub_district_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/district_text_view"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/sub_district_edit_text"
                android:text="เขต/อำเภอ"
                app:layout_constraintBottom_toBottomOf="@+id/district_edit_text"
                app:layout_constraintStart_toStartOf="@+id/address_text_view"
                app:layout_constraintTop_toTopOf="@+id/district_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/province_text_view"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/district_edit_text"
                android:text="จังหวัด"
                app:layout_constraintBottom_toBottomOf="@+id/province_edit_text"
                app:layout_constraintStart_toStartOf="@+id/address_text_view"
                app:layout_constraintTop_toTopOf="@+id/province_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/postal_code_text_view"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/province_edit_text"
                android:text="รหัสไปรษณีย์"
                app:layout_constraintBottom_toBottomOf="@+id/postal_code_edit_text"
                app:layout_constraintStart_toStartOf="@+id/address_text_view"
                app:layout_constraintTop_toTopOf="@+id/postal_code_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/owner_text_view"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/postal_code_edit_text"
                android:text="ชื่อเจ้าของโรงเพาะฟัก"
                app:layout_constraintBottom_toBottomOf="@+id/owner_edit_text"
                app:layout_constraintStart_toStartOf="@+id/address_text_view"
                app:layout_constraintTop_toTopOf="@+id/owner_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/fmd_no_text_view"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/farm_reg_id_edit_text"
                android:text="เลขที่ใบกำกับพันธุ์ลูกกุ้ง"
                app:layout_constraintBottom_toBottomOf="@+id/fmd_no_edit_text"
                app:layout_constraintStart_toStartOf="@+id/address_text_view"
                app:layout_constraintTop_toTopOf="@+id/fmd_no_edit_text"
                tools:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/hatchery_name_edit_text"
                style="@style/EditTextWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:gravity="end"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Deprecated,TextFields"/>

            <!--<EditText
                android:id="@+id/ph_morning_edit_text"
                style="@style/EditTextWhite"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:gravity="end"
                android:inputType="textPostalAddress"
                app:layout_constraintBottom_toBottomOf="@+id/address_edit_text"
                app:layout_constraintEnd_toStartOf="@+id/address_edit_text"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/address_edit_text"/>-->

            <EditText
                android:id="@+id/address_edit_text"
                style="@style/EditTextWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="4dp"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="end"
                android:inputType="textPostalAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/hatchery_name_edit_text"/>

            <EditText
                android:id="@+id/sub_district_edit_text"
                style="@style/EditTextWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="end"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/address_edit_text"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/address_edit_text"
                tools:ignore="TextFields"/>

            <EditText
                android:id="@+id/district_edit_text"
                style="@style/EditTextWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="end"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/address_edit_text"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/sub_district_edit_text"
                tools:ignore="TextFields"/>

            <EditText
                android:id="@+id/province_edit_text"
                style="@style/EditTextWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="end"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/address_edit_text"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/district_edit_text"/>

            <EditText
                android:id="@+id/postal_code_edit_text"
                style="@style/EditTextWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="end"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/address_edit_text"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/province_edit_text"/>

            <EditText
                android:id="@+id/owner_edit_text"
                style="@style/EditTextWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="end"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/address_edit_text"
                app:layout_constraintStart_toStartOf="@+id/fmd_no_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/postal_code_edit_text"/>

            <EditText
                android:id="@+id/fmd_no_edit_text"
                style="@style/EditTextWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="end"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/address_edit_text"
                app:layout_constraintStart_toEndOf="@+id/fmd_no_text_view"
                app:layout_constraintTop_toBottomOf="@+id/owner_edit_text"/>

            <Button
                android:id="@+id/save_button"
                style="@style/Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="บันทึก"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fmd_no_edit_text"/>

            <TextView
                android:id="@+id/textView2"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="ไร่"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/address_edit_text"
                app:layout_constraintStart_toEndOf="@+id/address_edit_text"
                app:layout_constraintTop_toTopOf="@+id/address_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textView3"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="กก."
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/owner_edit_text"
                app:layout_constraintStart_toEndOf="@+id/owner_edit_text"
                app:layout_constraintTop_toTopOf="@+id/owner_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textView4"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="ตัว/\nกก."
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/fmd_no_edit_text"
                app:layout_constraintStart_toEndOf="@+id/fmd_no_edit_text"
                app:layout_constraintTop_toTopOf="@+id/fmd_no_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textView7"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="ตัว"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/province_edit_text"
                app:layout_constraintStart_toEndOf="@+id/province_edit_text"
                app:layout_constraintTop_toTopOf="@+id/province_edit_text"
                tools:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textView8"
                style="@style/LabelTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="วัน"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/postal_code_edit_text"
                app:layout_constraintStart_toEndOf="@+id/postal_code_edit_text"
                app:layout_constraintTop_toTopOf="@+id/postal_code_edit_text"
                tools:textColor="@android:color/black"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/progress_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>