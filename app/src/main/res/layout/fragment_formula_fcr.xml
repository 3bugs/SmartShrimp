<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FormulaFcrFragment"
    tools:ignore="HardcodedText">

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".2"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/feed_edit_text"
        app:layout_constraintStart_toStartOf="@+id/feed_edit_text"
        app:layout_constraintTop_toTopOf="@id/guideline7"
        tools:ignore="PxUsage"/>

    <EditText
        android:id="@+id/feed_edit_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="จำนวนอาหารที่ใช้"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#cccccc"
        android:textSize="26sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/weight_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="น้ำหนักกุ้งที่ได้"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#cccccc"
        android:textSize="26sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintEnd_toEndOf="@+id/feed_edit_text"
        app:layout_constraintStart_toStartOf="@+id/feed_edit_text"
        app:layout_constraintTop_toTopOf="@+id/guideline7"/>

    <Button
        android:id="@+id/calculate_button"
        style="@style/Button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="คำนวณ"
        app:layout_constraintEnd_toEndOf="@+id/result_text_view"
        app:layout_constraintStart_toStartOf="@+id/result_text_view"
        app:layout_constraintTop_toBottomOf="@+id/level_text_view"/>

    <TextView
        android:id="@+id/equal_sign_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="="
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/guideline7"/>

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="#AEA7AA"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_edit_text"
        tools:text="123.45"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#023762"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="กลับไปหน้าสูตรคำนวณ"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView5"
        style="@style/LabelTextWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="(กก.)"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/feed_edit_text"
        app:layout_constraintTop_toTopOf="@+id/feed_edit_text"
        tools:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/textView6"
        style="@style/LabelTextWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="(กก.)"
        app:layout_constraintBottom_toBottomOf="@+id/weight_edit_text"
        app:layout_constraintStart_toEndOf="@+id/weight_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/level_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        app:fontFamily="@font/arabica"
        app:layout_constraintEnd_toEndOf="@+id/result_text_view"
        app:layout_constraintStart_toStartOf="@+id/result_text_view"
        app:layout_constraintTop_toBottomOf="@+id/result_text_view"
        tools:text="อยู่ในเกณฑ์"/>

    <!--<ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintStart_toStartOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="@+id/back_button"
        app:srcCompat="@drawable/ic_back"/>-->

</android.support.constraint.ConstraintLayout>