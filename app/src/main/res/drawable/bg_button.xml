<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:insetBottom="5dp" android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp">
            <shape android:shape="rectangle">
                <corners android:radius="6dp"/>
                <solid android:color="@color/colorAccent"/>
                <stroke android:width="1dp" android:color="@color/colorAccent"/>
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp"/>
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetBottom="5dp" android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp">
            <shape android:shape="rectangle">
                <corners android:radius="6dp"/>
                <solid android:color="#37A7C2"/>
                <stroke android:width="1dp" android:color="#37A7C2"/>
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp"/>
            </shape>
        </inset>
    </item>
    <item android:state_enabled="false">
        <inset android:insetBottom="5dp" android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp">
            <shape android:shape="rectangle">
                <corners android:radius="6dp"/>
                <solid android:color="#aaaaaa"/>
                <stroke android:width="1dp" android:color="#aaaaaa"/>
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp"/>
            </shape>
        </inset>
    </item>

</selector>