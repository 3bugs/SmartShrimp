<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#bbbbbb</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="dialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearanceSmall">@style/MyDialogTextAppearanceSmall</item>
        <item name="android:textAppearanceMedium">@style/MyDialogTextAppearanceMedium</item>
        <item name="android:textAppearanceLarge">@style/MyDialogTextAppearanceLarge</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="MyDialogTextAppearanceSmall" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/arabica</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyDialogTextAppearanceMedium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/arabica</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyDialogTextAppearanceLarge" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/arabica</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="fontFamily">@font/arabica</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainMenuText">
        <item name="fontFamily">@font/arabica</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LabelTextWhite">
        <item name="fontFamily">@font/arabica</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditTextWhite">
        <item name="fontFamily">@font/arabica</item>
        <item name="android:background">@drawable/bg_edit_text_white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Button">
        <item name="fontFamily">@font/arabica</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
